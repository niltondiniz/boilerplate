{
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "cwd": "${workspaceFolder}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "swagger-autogen"
            ],
            "port": 8000,
            "console": "integratedTerminal",
            "restart": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "yarn",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "dev"
            ],
            "port": 8000,
            "cwd": "${workspaceRoot}",
            "timeout": 10000
        },
    ]
}